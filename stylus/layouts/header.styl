.header
  display block
  width 100%
  position absolute
  top 0
  left 0
  z-index 100

  +below(tb)
    position fixed

  &__wrapper
    margin 0 auto
    display block
    width 90%

    +below(tb)
      width: 100%;
      box-sizing: border-box;
      padding: 0 20px;

  &__inner
    height 90px
    display flex
    align-items center

    +below(tb)
      height 60px

  &__nav
    width 100%
    height 100%
    display flex
    align-items center
    justify-content flex-end

  &__list
    display flex
    align-items center
    height 100%

    +below(tb)
      width: 100%;
      position: absolute;
      left: 0;
      right: 0;
      top 60px
      margin: auto;
      display: none;
      height: auto;
      background: black;
      text-align: center;

  &__item
    flex-center()
    height 100%
    padding 15px 0

    +below(tb)
      display: list-item;
      justify-content unset
      align-items unset
      height unset

      &:last-child
        margin-bottom 15px

  &__link
    flex-center()
    height 100%
    padding 0 15px

    &:hover > span:after
      opacity 1
      visibility visible
      transform scale(1, 1)

      +below(tb)
        visibility hidden

    span
      position relative
      font-size 16px
      color text-color
      font-family Roboto, sans-serif

      &:after
        content ''
        position absolute
        left 0
        bottom -11px
        display block
        width 100%
        height 2px
        background-color #ff9955ff
        transition-property opacity, visibility, transform
        transition-duration .2s
        opacity 0
        visibility hidden
        transform-origin center
        transform scale(0, 1)

  &__menu-icon
    display: none
    width: 30px
    height: 20px
    position: relative
    cursor: pointer

    +below(tb)
      display block

    span
      display: block
      width: 30px
      height: 4px
      background-color: #c8c9c9
      position: absolute
      margin: auto
      left: 0
      top: 0
      bottom: 0

    &:before
    &:after
      content: ''
      display: block
      height: 4px
      background-color: #c8c9c9
      position: absolute
      right: 0

    &:before
      top: 0
      width: 30px

    &:after
      bottom: 0
      width: 20px
      -webkit-transition: 0.3s ease
      -moz-transition: 0.3s ease
      -o-transition: 0.3s ease
      transition: 0.3s ease

    &.active:after
      width 30px