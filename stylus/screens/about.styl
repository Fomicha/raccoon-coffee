.about
  display block
  width 100%
  background url("../img/7.svg")
  background-repeat no-repeat
  background-position center !important
  padding 60px 0
  overflow hidden

  +below(mb)
    padding 60px 10px 60px 10px

  &__container
    flex-center()
    justify-content space-between

    +below(mb)
      flex-direction column

  &__discription
    flex-center()
    flex-direction column

    +below(mb)
      width 100%

  &__name-img
    display flex

    +below(mb)
      justify-content center

    &_img
      width 100%

  &__logo-img
    display flex
    margin 15px 0

  &__logo-img_img
    transform: scale(1.5);

  &__text
    display flex
    flex-direction column
    text-align center
    font-family Roboto, sans-serif
    color #333333

    p
      margin-bottom 0

  &__partners
    display flex

  &__partners-img
    height 50px
    width 50px
    margin 10px

  &__partners_stores
    display flex

  &__partners-apps
    font-family Roboto, sans-serif
    color #333333
    display flex
    flex-direction column
    align-items center
    justify-content center

  &__turk
    display flex
    margin-left 45px

    +below(mb)
      width 100%
      justify-content center
      margin-left unset

    &-img
      height 324px

      +below(tb)
        width 100%
        height: 230px;
