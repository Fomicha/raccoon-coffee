.delivery
  display block
  width 100%
  padding 60px 0
  overflow hidden
  height auto

  &__container
    display flex
    align-items center
    justify-content space-between

  &__info
    display flex
    align-items center
    justify-content space-between
    width 43%
    height auto
    border 1px solid text-color
    border-left none
    padding 1% 5%

  &__img
    width 150px

  &__info-details
    flex-center()
    flex-direction column
    max-width 50%

  &__title
    display block
    position relative

    &:after
      display block
      content ''
      position absolute
      bottom 0
      width 100%
      height 1px
      background black

  &__subtitle
    p
      color black
      font-family Roboto, sans-serif
      text-transform uppercase
      font-size 18px
      font-weight bold
      margin 7px 0

  &__text
    text-align center
    font-family Roboto, sans-serif
    font-size 14px

  &__map
    display block
    width 43%
    height 400px

