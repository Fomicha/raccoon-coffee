.main
  position relative
  display block
  width 100%
  height 100vh
  overflow hidden

  .wrapper
    position absolute
    top 0
    bottom 0
    right 0
    left: 0
    z-index: 99

  &__inner
    flex-center()
    width 100%
    height 100%
    flex-direction row

  &__content
    flex-center()
    flex-direction column
    width 500px
    text-align center

    img
      width 400px

      +below(mb)
        width 300px

  &__scroll-down
    position absolute
    left 0
    right 0
    margin auto
    bottom 100px

.main-slider
  display block
  position relative
  width 100%
  height 100%
  background rgba(255,255,255,0.2)

  &__item
    display block !important
    background-repeat no-repeat
    background-size cover !important
    background-position center !important
    width 100%
    height 100% !important
    margin 0 auto !important
    position absolute !important
    z-index -1 !important
    left 0!important
    top 0!important

.slick-dots
  position absolute
  display flex
  width auto
  margin auto
  justify-content center
  flex-direction column
  bottom 0
  top 0

  +below(mb)
    display none

  li
    margin 13px 40px

  button
    font-size 0
    display block
    border none
    height 10px
    width 10px
    background text-color
    border-radius 100%
    padding 0
    cursor: pointer
    outline none
    
    +below(mb)
      display: none

  .slick-active button
    background #ff9955ff



